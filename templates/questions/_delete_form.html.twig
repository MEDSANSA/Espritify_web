<form method="post" action="{{ path('app_questions_delete', {'idQuestion': question.idQuestion}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.idQuestion) }}">
    <button class="btn btn-link text-danger text-gradient px-3 mb-0" href="javascript:;"><i class="far fa-trash-alt me-2"></i>Delete</button>
</form>
