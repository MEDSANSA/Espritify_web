                datasets: [{
                    label: 'Number of Interviews',
                    data: [{% for date, count in entretiensPerDay %}{{ count }}, {% endfor %}],
                    fill: false,
                    borderColor: 'rgba(154,3,3,255)',
                    borderWidth: 2
