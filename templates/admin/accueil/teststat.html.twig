{# entretiens_chart.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Entretiens Chart</title>
    <!-- Include Chart.js library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h2>Entretiens Chart</h2>
    <canvas id="entretiensChart" width="800" height="400"></canvas>
    <script>
        // Extract data from PHP into JavaScript
        const data = {
            labels: [{% for date, count in entretiensPerDay %}"{{ date }}", {% endfor %}],
            datasets: [{
                label: 'Number of Entretiens',
                data: [{% for date, count in entretiensPerDay %}{{ count }}, {% endfor %}],
                fill: false,
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 2
            }]
        };

        // Create Chart.js instance
        const ctx = document.getElementById('entretiensChart').getContext('2d');
        const entretiensChart = new Chart(ctx, {
            type: 'line', // Use line chart type
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>
