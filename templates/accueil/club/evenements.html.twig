{% extends 'base.html.twig' %}

{% block title %}Evenements!{% endblock %}
 {% block header %}
     <header class="header-area header-sticky">
         <div class="container">
             <div class="row">
                 <div class="col-12">
                     <nav class="main-nav">
                         <!-- ***** Logo Start ***** -->
                         <a href="index.html" class="logo">
                             Espritify
                         </a>
                         <!-- ***** Logo End ***** -->
                         <!-- ***** Menu Start ***** -->
                         <ul class="nav">
                             <li class="scroll-to-section"><a href="{{path('app_accueil')}}" >Home</a></li>
                             <li><a href="#top" class="active">Meetings</a></li>
                             <li class="scroll-to-section"><a href="#apply">Apply Now</a></li>
                             <li class="has-sub">
                                 <a href="javascript:void(0)">Pages</a>
                                 <ul class="sub-menu">
                                     <li><a href="{{path('app_meetings')}}">Upcoming Meetings</a></li>
                                     <li><a href="{{path('app_meeting-details')}}">Meeting Details</a></li>
                                 </ul>
                             </li>
                             <li class="scroll-to-section"><a href="#courses">Courses</a></li>
                             <li class="scroll-to-section"><a href="#contact">Contact Us</a></li>
                         </ul>
                         <a class='menu-trigger'>
                             <span>Menu</span>
                         </a>
                         <!-- ***** Menu End ***** -->
                     </nav>
                 </div>
             </div>
         </div>
     </header>

 {% endblock %}
{% block banner %}
{% endblock %}
    {% block body %}

        <section class="heading-page header-text" id="top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h6>Here are our upcoming meetings</h6>
                        <h2>Upcoming Meetings</h2>
                    </div>
                </div>
            </div>
        </section>

        <section class="meetings-page" id="meetings">
        <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="filters">
                            <ul>
                                <li data-filter="*"  class="active">All Meetings</li>
                                <li data-filter=".soon">Soon</li>
                                <li data-filter=".imp">Important</li>
                                <li data-filter=".att">Attractive</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="row grid">
                            {% for evenement in evenements %}
                                <div class="col-lg-4 templatemo-item-col all soon">
                                    <div class="meeting-item">

                                        <div class="thumb">
                                            <a href="{{path('app_evenements_details', {'id': club.id})}}"><img src="{{ asset('/uploads/brochures/' ~ club.logo)}}" height="200" width="100"alt=""></a>
                                        </div>
                                        <div class="down-content">
                                            <div class="price">
                                                <img src="{{ asset("assets/img/logos/icons8-ruban.png")}}" style="height: 30px; width: 30px; vertical-align: middle;"><span>{{ evenement.idClub }}</span>
                                            </div>
                                            <div class="date">
                                                <h5> <img src="{{ asset("assets/img/logos/icons8-ruban3.png")}}" style="height: 30px; width: 30px; vertical-align: middle;"> {{ evenement.dateDebut|date }} <span>TO</span></h5>
                                                <h5>{{ evenement.dateFin|date }} <span></span></h5>

                                            </div>
                                            <div></div>
                                            <a href="{{path('app_meeting-details')}}"><h4><img src="{{ asset("assets/img/logos/icons8-ruban2.png")}}" style="height: 30px; width: 30px; vertical-align: middle;">{{ evenement.lieu }}</h4></a>
                                         <img src="{{ asset("assets/img/logos/icons8-book-32.png")}}" style="height: 30px; width: 30px; vertical-align: middle;"><span>{{ evenement.description }}</span>
                                            <div></br></div>
                                            <a href="{{path('app_evenements_details', {'id': club.id})}}" class="filters" style="horizental-align: right;">

                                                <form action="{{ path('participer_evenement', {'id': evenement.id}) }}" method="post">
                                                    <ul>
                                                        <li data-filter="*"  class="active">  <button   class="main-button-red" type="submit">Participer</button>
                                                        </li>
                                                    </ul>
                                                </form>

                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}




                        </div>
                        <div class="col-lg-12">
                            <div class="pagination">
                                <ul>
                                    <li><a href="#">1</a></li>
                                    <li class="active"><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>
            .main-button-red {
                font-size: 13px;
                color: #fff;
                background-color: #a12c2f;
                padding: 11px 30px;
                display: inline-block;
                border-radius: 22px;
                font-weight: 600;
                text-transform: uppercase;
                transition: all .3s;
                cursor: pointer;
                margin: 0px 3px;
                border: none;
                outline: none;
            }

            .main-button-red:hover {
                background-color: #fff;
                color: #a12c2f;
            }
        </style>

    {% endblock %}