            //afficher les evenements selon la date
            function getEventClass(eventDate) {
                var currentDate = new Date();
                eventDate = new Date(eventDate);

                // Supprimer les informations sur l'heure pour comparer uniquement les dates
                var currentDateWithoutTime = new Date(currentDate.getFullYear(), currentDate.getMonth(), currentDate.getDate());
                var eventDateWithoutTime = new Date(eventDate.getFullYear(), eventDate.getMonth(), eventDate.getDate());

                if (eventDateWithoutTime < currentDateWithoutTime) {
                    return 'event-past';
                } else if (eventDateWithoutTime > currentDateWithoutTime) {
                    return 'event-future';
                } else {
                    return 'event-current';
                }
            }
