      <div class="row">
        <div class="col-lg-12">
          <h6>Here are our Available Internships</h6>
          <h2>Available Internships</h2>
        </div>
      </div>
    </div>
  </section>

  <section class="meetings-page" id="meetings">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <div class="filters">
                <ul>
                  <a  href="{{path('app_internships')}}"><li data-filter="*"  class="active">All Internships {{ offreStage.getTotalItemCount }}</li></a>
                  <a  href="{{path('app_myinternships')}}"><li data-filter=".soon">My Internships {{ dossier.getTotalItemCount }}</li></a>
                  <li data-filter=".imp">Important</li>
                  <li data-filter=".att">Attractive</li>
                </ul>
              </div>
            </div>

            <div class="col-lg-12">
              <div class="row grid">
              {% for i in dossier %}
             
                <div class="col-lg-4 templatemo-item-col all soon"> 
                  <div class="meeting-item">
                  
                    <div class="down-content">
                   
                     
                      <p><b>Internship: </b> <br>{{i.idOffre.titre}}</p>
                      <p><b>Company: </b> <br>{{i.idOffre.nomSoc}}</p>
                      <p><b>Company: </b>
                        <span class="text-secondary text-xs font-weight-bold">
                          <img src="{{ asset('uploads/' ~ i.cv) }}" alt="CV Image" style="max-width: 200px; max-height: 200px;"></p>
                          <p><b>Convention: </b>
                            <span class="text-secondary text-xs font-weight-bold">
                          <img src="{{ asset('uploads/' ~ i.convention) }}" alt="CV Image" style="max-width: 200px; max-height: 200px;"></p>
                          <p><b>ID Card Copy: </b>
                            <span class="text-secondary text-xs font-weight-bold">
                          <img src="{{ asset('uploads/' ~ i.copieCin) }}" alt="CV Image" style="max-width: 200px; max-height: 200px;">
                          </p>
                 
                    </div>
                  </div> 
                </div>
                
                {% endfor %}<div class="col-lg-12">
              <div class="pagination">
                <ul><li class="active">
                  {{ knp_pagination_render(dossier) }}</li>
           
                  
                  
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
