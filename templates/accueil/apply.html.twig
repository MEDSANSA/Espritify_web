{% extends 'base.html.twig' %}

{% block title %}Apply{% endblock %}
 {% block header %} 
    <header class="header-area header-sticky">
      <div class="container">
          <div class="row">
              <div class="col-12">
                  <nav class="main-nav">
                      <!-- ***** Logo Start ***** -->
                      <a href="index.html" class="logo">
                          Espritify
                      </a>
                      <!-- ***** Logo End ***** -->
                      <!-- ***** Menu Start ***** -->
                      <ul class="nav">
                          <li class="scroll-to-section"><a href="{{path('app_accueil')}}" >Home</a></li>
                          <li><a href="{{path('app_internships')}}">Internships</a></li>
                          <li class="scroll-to-section"><a href="#apply">Apply Now</a></li>
                           <li class="has-sub">
                              <a href="javascript:void(0)">Internships</a>
                              <ul class="sub-menu">
                                  <li><a href="{{path('app_internships')}}">Available Internships</a></li>
                                  <li><a href="">Upcoming Interviews</a></li>
                              </ul>
                          </li>
                          <li class="scroll-to-section"><a href="#courses">Courses</a></li> 
                          <li class="scroll-to-section"><a href="#contact">Contact Us</a></li> 
                      </ul>        
                      <a class='menu-trigger'>
                          <span>Menu</span>
                      </a>
                      <!-- ***** Menu End ***** -->
                  </nav>
              </div>
          </div>
      </div>
  </header>
  
    {% endblock %}
{% block banner %}
{% endblock %}

{% block body %}
<section class="heading-page header-text" id="top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h6>Apply Now!</h6>
          <h2>{{offreStage.titre}}</h2>
        </div>
      </div>
    </div>
  </section>

<section class="contact-us" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-9 align-self-center">
          <div class="row">
            <div class="col-lg-12">
              <form id="contact" action="{{path('app_apply', {'id': offreStage.id})}}" method="post" enctype="multipart/form-data" novalidate>
                <div class="row">
                  <div class="col-lg-12">
                      <h2>{{ offreStage.titre }}</h2>
                  </div>
                <div class="col-lg-6">
                  <fieldset>
                      <label for="dossier_stage_cv">Choose a CV</label>
                      <input name="dossier_stage[cv]" type="file" id="dossier_stage_cv" required=""/>
                  </fieldset>
                </div>
                <div class="col-lg-6">
                    <fieldset>
                        <label for="dossier_stage_convention">Choose an Internship convention</label>
                        <input name="dossier_stage[convention]" type="file" id="dossier_stage_convention" required=""/>
                    </fieldset>
                </div>
                <div class="col-lg-6">
                    <fieldset>
                        <label for="dossier_stage_copie_cin">Choose an ID CARD COPY</label>
                        <input name="dossier_stage[copie_cin]" type="file" id="dossier_stage_copie_cin" required=""/>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="button">Apply</button>
                    </fieldset>
                </div>
                </div>
                <br></br>
                {% if form_errors(form.cv) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.cv) }}
                </div>
            {% endif %}
            {% if form_errors(form.convention) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.convention) }}
                </div>
            {% endif %}
            {% if form_errors(form.copie_cin) %}
                <div class="alert alert-danger">
                    {{ form_errors(form.copie_cin) }}
                </div>
            {% endif %}
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="right-info">
            <ul>
              <li>
                <h6>Phone Number</h6>
                <span>010-020-0340</span>
              </li>
              <li>
                <h6>Email Address</h6>
                <span>info@meeting.edu</span>
              </li>
              <li>
                <h6>Street Address</h6>
                <span>Rio de Janeiro - RJ, 22795-008, Brazil</span>
              </li>
              <li>
                <h6>Website URL</h6>
                <span>www.meeting.edu</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
{% endblock %}