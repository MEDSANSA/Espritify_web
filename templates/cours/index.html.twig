{% extends 'base.html.twig' %}

{% block title %}Courses index{% endblock %}

{% block body %}
    <div class="row">
    <div class="col-md-12 mb-lg-0 mb-4">
     {% for label, messages in app.session.flashbag.all() %}
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}
        <div class="card mt-4">
            <div class="row">  
                <div class="col-6 d-flex align-items-center">
                    <h4>Courses table</h4>
                    <select class="form-select form-select-sm me-2" id="filterSelect" aria-label="Default select example" style="width: 200px;">
                    <option selected disabled>Filter by Catogries</option>
                    {% for categorie in categorie %}
                    <option value="{{ categorie.id }}">{{ categorie.type }}</option>
                    {% endfor %}
                </select>
                </div>
                <div class="col-6 text-end">
                    <a class="btn bg-gradient-dark mb-0" href="{{ path('app_cours_new') }}"><i class="fas fa-plus"></i> Add Course</a>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Id</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Title</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Conetnt</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    State</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Rate</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Category</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody id="cours_table">
                            {% for cours in cours %}
                            <tr>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">{{ cours.id }}</p>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">{{ cours.title }}</p>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">{{ cours.contenu }}</p>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">{{ cours.etat }}</p>
                                </td>
                                <td>    
                                    <p class="text-xs font-weight-bold mb-0">{{ cours.rate }}</p>
                                </td>
                                <td>
                                    <p class="text-xs font-weight-bold mb-0">{{ cours.idCat }}</p>
                                </td>
                                <td>
                                    <a class="btn btn-link text-dark px-3 mb-0" href="{{ path('app_cours_edit', {'id': cours.id}) }}"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a>
                                    {{ include('cours/_delete_form.html.twig') }}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7">no data found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script> document.getElementById('filterSelect').addEventListener('change', function() {
    var selectedCategorieId = this.value;
    var tableBody = document.getElementById('cours_table');

    // Clear existing table rows
    tableBody.innerHTML = '';

    // Send AJAX request to fetch dossier de stage records for the selected offer
    fetch('/cours/CoursFilter/' + selectedCategorieId)
      .then(response => response.json())
      .then(data => {
        console.log(data);
        if (data.length === 0) {
                // If no data, create a single row with message
                var noDataRow = document.createElement('tr');
                var noDataCell = document.createElement('td');
                noDataCell.textContent = "No records found";
                noDataCell.style.textAlign = "center";
                noDataCell.colSpan = 6; // Span across all columns
                noDataRow.appendChild(noDataCell);
                tableBody.appendChild(noDataRow);
            } else {
        // Add new table rows based on fetched data
        data.forEach(course => {
          console.log(course)
          var row = document.createElement('tr');
          // Create table cells and populate them with dossier data
          var titleCell = document.createElement('td');
          titleCell.textContent = course.title;
          row.appendChild(titleCell);
          var contenuCell = document.createElement('td');
          contenuCell.textContent = course.contenu;
          row.appendChild(contenuCell);

           
          // Append the row to the table body
          tableBody.appendChild(row);
        });
            }
      })
      .catch(error => {
        console.error('Error:', error);
      });
  });
</script>
{% endblock %}
