{{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
    
    <div class="card-body">
        <div class="mb-3">
            {{ form_label(form.sujet, 'Sujet') }}
			{{ form_widget(form.sujet, { 'attr': {'class': 'form-control','placeholder': 'sujet'} }) }}
			{{ form_errors(form.sujet)}}
        </div>
        <div class="mb-3">
            {{ form_label(form.description, 'Description') }}
			{{ form_widget(form.description, { 'attr': {'class': 'form-control','placeholder': 'description'} }) }}
			{{ form_errors(form.description)}}
        </div>
        <div class="mb-3">
            {{ form_label(form.idQuestion, 'Question') }}
			{{ form_widget(form.idQuestion, { 'attr': {'class': 'form-control','placeholder': 'Question'} }) }}
			{{ form_errors(form.idQuestion)}}
        </div>
        <div class="text-center">
            <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">{{ button_label|default('Save') }}</button>
        </div>
    </div>
{{ form_end(form) }}